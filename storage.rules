rules_version = '2';

// Firebase Storage rules for Gouache
service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads to episodes folder (for admin video uploads)
    match /episodes/{allPaths=**} {
      allow read, write: if true; // Allow admin uploads - in production, add proper admin authentication
    }
    
    // Allow uploads to stories folder (for user story uploads)
    match /stories/{allPaths=**} {
      allow read, write: if true; // Allow user story uploads
    }
    
    // Allow uploads to artworks folder (for artwork images)
    match /artworks/{allPaths=**} {
      allow read, write: if true; // Allow artwork uploads
    }
    
    // Allow uploads to profiles folder (for profile pictures)
    match /profiles/{allPaths=**} {
      allow read, write: if true; // Allow profile picture uploads
    }
    
    // Allow uploads to avatars folder (for profile avatars)
    match /avatars/{allPaths=**} {
      allow read: if true; // Public read for avatars
      allow write: if request.auth != null; // Authenticated users can upload their avatar
    }
    
    // Allow uploads to banners folder (for profile banner images)
    match /banners/{allPaths=**} {
      allow read: if true; // Allow public read access
      allow write: if request.auth != null; // Allow authenticated users to upload banner images
    }
    
    // Allow uploads to portfolio folder (for artist portfolio images)
    match /portfolio/{allPaths=**} {
      allow read: if true; // Allow public read access
      allow write: if request.auth != null; // Allow any authenticated user to upload portfolio images
    }
    
// Allow uploads to marketplace products folder
match /marketplace/{allPaths=**} {
  allow read: if true; // Allow public read access
  allow write: if request.auth != null; // Only allow authenticated users to upload products
}

// Allow uploads to advertisements folder
match /advertisements/{allPaths=**} {
  allow read: if true; // Allow public read access
  allow write: if request.auth != null; // Only allow authenticated users to upload advertisements
}

// Allow uploads to news folder (for news article images and section images)
match /news/{allPaths=**} {
  allow read: if true; // Allow public read access
  allow write: if request.auth != null; // Only allow authenticated users to upload news images
}

// Allow uploads to course-thumbnails folder (for course thumbnail images)
match /course-thumbnails/{allPaths=**} {
  allow read: if true; // Allow public read access
  allow write: if request.auth != null; // Only allow authenticated users to upload course thumbnails
}

// Allow uploads to course-trailers folder (for course preview videos)
match /course-trailers/{allPaths=**} {
  allow read: if true; // Allow public read access
  allow write: if request.auth != null; // Only allow authenticated users to upload course trailers
}
    
    // Allow uploads to test folder (for testing)
    match /test/{allPaths=**} {
      allow read, write: if true; // Allow test uploads
    }
    
    // Allow public read access to all other files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false; // Deny writes to other paths
    }
  }
}
