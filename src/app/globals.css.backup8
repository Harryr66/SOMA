@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 222.2 47.4% 11.2%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 222.2 84% 4.9%;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 0 0% 0%;
    --foreground: 210 40% 98%;
    --card: 0 0% 0%;
    --card-foreground: 210 40% 98%;
    --popover: 0 0% 0%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;
    --chart-1: 220 70% 50%;
    --chart-2: 160 60% 45%;
    --chart-3: 30 80% 55%;
    --chart-4: 280 65% 60%;
    --chart-5: 340 75% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer components {
  .btn-gradient-outline {
    border: 2px solid transparent;
    background:
      linear-gradient(var(--card), var(--card)) padding-box,
      linear-gradient(135deg, transparent, transparent) border-box;
    border-radius: 0.375rem;
  }

  /* Base gradient-border - neutral by default */
  .gradient-border {
    border: 2px solid transparent;
    background:
      linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
      linear-gradient(135deg, transparent, transparent) border-box;
    background-clip: padding-box, border-box;
    border-radius: 0.375rem;
  }
  
  /* Hover gradient-border - neutral by default */
  .hover\:gradient-border:hover {
    border: 2px solid transparent;
    background:
      linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
      linear-gradient(135deg, transparent, transparent) border-box;
    background-clip: padding-box, border-box;
  }

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .story-gradient-border {
    border: 2px solid transparent;
    background:
      linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
      linear-gradient(135deg, transparent, transparent) border-box;
    background-clip: padding-box, border-box;
  }
}

/* LIGHT THEME GRADIENTS - EXPLICIT COLORS */
body:not(.dark) .gradient-border {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #3d9071 0%, #1b4b39 8%, #7df3de 16%, #89f7f8 24%, #7df3c6 32%, #97c8bf 40%, #68ba9b 48%, #065042 56%, #056955 64%, #00755e 72%, #77aaff 80%, #99ccff 88%, #bbeeff 96%, #5588ff 100%) border-box !important;
}

body:not(.dark) .hover\:gradient-border:hover {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #3d9071 0%, #1b4b39 8%, #7df3de 16%, #89f7f8 24%, #7df3c6 32%, #97c8bf 40%, #68ba9b 48%, #065042 56%, #056955 64%, #00755e 72%, #77aaff 80%, #99ccff 88%, #bbeeff 96%, #5588ff 100%) border-box !important;
}

body:not(.dark) .btn-gradient-outline {
  background:
    linear-gradient(var(--card), var(--card)) padding-box,
    linear-gradient(135deg, #3d9071 0%, #1b4b39 8%, #7df3de 16%, #89f7f8 24%, #7df3c6 32%, #97c8bf 40%, #68ba9b 48%, #065042 56%, #056955 64%, #00755e 72%, #77aaff 80%, #99ccff 88%, #bbeeff 96%, #5588ff 100%) border-box !important;
}

body:not(.dark) .story-gradient-border {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #3d9071 0%, #1b4b39 8%, #7df3de 16%, #89f7f8 24%, #7df3c6 32%, #97c8bf 40%, #68ba9b 48%, #065042 56%, #056955 64%, #00755e 72%, #77aaff 80%, #99ccff 88%, #bbeeff 96%, #5588ff 100%) border-box !important;
}

/* DARK THEME GRADIENTS - EXPLICIT COLORS - MAXIMUM SPECIFICITY */
html[data-theme="dark"] body.dark .gradient-border,
html body.dark .gradient-border,
body.dark .gradient-border,
.dark .gradient-border {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #51C4D3, #77ACF1, #EF88AD, #A53860, #670D2F, #E8988A, #FFEAD8, #BA487F, #E1ACAC, #51C4D3, #77ACF1) border-box !important;
  background-clip: padding-box, border-box !important;
}

html[data-theme="dark"] body.dark .hover\:gradient-border:hover,
html body.dark .hover\:gradient-border:hover,
body.dark .hover\:gradient-border:hover,
.dark .hover\:gradient-border:hover {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #51C4D3, #77ACF1, #EF88AD, #A53860, #670D2F, #E8988A, #FFEAD8, #BA487F, #E1ACAC, #51C4D3, #77ACF1) border-box !important;
  background-clip: padding-box, border-box !important;
}

html[data-theme="dark"] body.dark .btn-gradient-outline,
html body.dark .btn-gradient-outline,
body.dark .btn-gradient-outline,
.dark .btn-gradient-outline {
  background:
    linear-gradient(var(--card), var(--card)) padding-box,
    linear-gradient(135deg, #51C4D3 0%, #77ACF1 10%, #EF88AD 20%, #A53860 30%, #670D2F 40%, #E8988A 50%, #FFEAD8 60%, #BA487F 70%, #E1ACAC 80%, #51C4D3 90%, #77ACF1 100%) border-box !important;
}

html[data-theme="dark"] body.dark .story-gradient-border,
html body.dark .story-gradient-border,
body.dark .story-gradient-border,
.dark .story-gradient-border {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #51C4D3 0%, #77ACF1 10%, #EF88AD 20%, #A53860 30%, #670D2F 40%, #E8988A 50%, #FFEAD8 60%, #BA487F 70%, #E1ACAC 80%, #51C4D3 90%, #77ACF1 100%) border-box !important;
  background-clip: padding-box, border-box !important;
}

/* Dropdown menu items */
body:not(.dark) [data-radix-collection-item]:hover {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #3d9071 0%, #1b4b39 8%, #7df3de 16%, #89f7f8 24%, #7df3c6 32%, #97c8bf 40%, #68ba9b 48%, #065042 56%, #056955 64%, #00755e 72%, #77aaff 80%, #99ccff 88%, #bbeeff 96%, #5588ff 100%) border-box !important;
}

html[data-theme="dark"] body.dark [data-radix-collection-item]:hover,
html body.dark [data-radix-collection-item]:hover,
body.dark [data-radix-collection-item]:hover,
.dark [data-radix-collection-item]:hover {
  background:
    linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
    linear-gradient(135deg, #51C4D3, #77ACF1, #EF88AD, #A53860, #670D2F, #E8988A, #FFEAD8, #BA487F, #E1ACAC, #51C4D3, #77ACF1) border-box !important;
}

