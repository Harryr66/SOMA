
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 0 0% 17%; /* #2C2C2C */
    --card: 0 0% 100%;
    --card-foreground: 0 0% 17%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 17%;
    --primary: 173 58% 39%; /* Teal */
    --primary-foreground: 0 0% 98%;
    --secondary: 240 50% 96%; /* #E6E6FA */
    --secondary-foreground: 173 58% 39%; /* Teal */
    --muted: 240 50% 96%;
    --muted-foreground: 215 25% 42%;
    --accent: 336 84% 71%; /* #FF69B4 */
    --accent-foreground: 0 0% 10%;
    --destructive: 0 84.2% 60.2%; /* #EF4444 */
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 90%;
    --input: 0 0% 90%;
    --ring: 173 58% 39%; /* Teal */
    --radius: 0.8rem;
    
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
  }

  .dark {
    --background: 0 0% 3.9%;
    --foreground: 0 0% 98%;
    --card: 0 0% 3.9%;
    --card-foreground: 0 0% 98%;
    --popover: 0 0% 3.9%;
    --popover-foreground: 0 0% 98%;
    --primary: 173 58% 39%; /* Teal */
    --primary-foreground: 0 0% 98%;
    --secondary: 0 0% 14.9%;
    --secondary-foreground: 0 0% 98%;
    --muted: 0 0% 14.9%;
    --muted-foreground: 215 25% 61%;
    --accent: 336 84% 71%;
    --accent-foreground: 0 0% 10%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 14.9%;
    --input: 0 0% 14.9%;
    --ring: 173 58% 39%; /* Teal */

    --chart-1: 220 70% 50%;
    --chart-2: 160 60% 45%;
    --chart-3: 30 80% 55%;
    --chart-4: 280 65% 60%;
    --chart-5: 340 75% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  .btn-gradient-outline {
    border: 2px solid transparent;
    background:
      linear-gradient(var(--card), var(--card)) padding-box,
      linear-gradient(135deg, #51C4D3 0%, #77ACF1 10%, #EF88AD 20%, #A53860 30%, #670D2F 40%, #E8988A 50%, #FFEAD8 60%, #BA487F 70%, #E1ACAC 80%, #51C4D3 90%, #77ACF1 100%) border-box;
  }

  .gradient-border {
    border: 2px solid transparent;
    background:
      linear-gradient(hsl(var(--background)), hsl(var(--background))) padding-box,
      linear-gradient(135deg, #51C4D3, #77ACF1, #EF88AD, #A53860, #670D2F, #E8988A, #FFEAD8, #BA487F, #E1ACAC, #51C4D3, #77ACF1) border-box;
    background-clip: padding-box, border-box;
  }
  

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  .story-gradient-border {
    background: linear-gradient(135deg, #856277 0%, #60526b 50%, #8f707a 100%);
  }

  .no-focus-outline:focus, .no-focus-outline:focus-visible {
      outline: none !important;
      box-shadow: none !important;
      ring-width: 0 !important;
  }
}



